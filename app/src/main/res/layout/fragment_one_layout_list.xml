<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpicture1">

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center"
        android:text="@string/RESULTS_TABLE"
        android:textColor="#060303"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/easy2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="@string/RESULTS_TABLE_Easy"
        android:textColor="#FF000000"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="98dp" />

    <Button
        android:id="@+id/Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="@string/RESULTS_TABLE_Normal"
        android:textColor="#FF000000"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/hard"
        app:layout_constraintStart_toEndOf="@+id/easy2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="98dp" />

    <Button
        android:id="@+id/hard"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/RESULTS_TABLE_Hard"
        android:textColor="#FF000000"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="98dp" />
    <!--android:layout_above="@+id/table"-->


</android.support.constraint.ConstraintLayout>